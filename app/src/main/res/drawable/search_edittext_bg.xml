<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Fond noir à 10% d'opacité -->
    <solid android:color="#1A000000"/>  <!-- 1A = 10% en hexadécimal -->
    
    <!-- Bordure or avec effet métallique (conservée) -->
    <stroke
        android:width="1.5dp"
        android:color="#D4AF37"
        android:dashWidth="0.1dp"
        android:dashGap="1dp"/>
    
    <!-- Coins arrondis (conservés) -->
    <corners android:radius="24dp"/>
    
    <!-- Ombre portée subtile (conservée) -->
    <padding
        android:bottom="1dp"
        android:right="1dp"/>
</shape>
