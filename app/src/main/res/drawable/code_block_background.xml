<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 1. Base marron avec coins arrondis -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8B5A2B"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    
    <!-- 2. Reflet glacé (dégradé blanc transparent) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    
    <!-- 3. Surcouche dorée transparente -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCD4A418"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    
    <!-- 4. Bordure subtile -->
    <item>
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="#5D4037"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
