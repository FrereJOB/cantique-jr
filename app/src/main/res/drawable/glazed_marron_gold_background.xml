<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base marron -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8B5A2B"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    
    <!-- Reflet glacé - Version corrigée -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90"/>
        </shape>
    </item>
    
    <!-- Surcouche jaune or transparent -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCD4A418"/>
        </shape>
    </item>
</layer-list>
