<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Fond blanc transparent à 50% -->
    <solid android:color="#80FFFFFF" /> <!-- 80 = 50% d'opacité -->
    
    <!-- Bordures arrondies -->
    <corners android:radius="16dp" /> <!-- Ajustez le rayon ici -->
    
    <!-- Bordure fine grise optionnelle -->
    <stroke
        android:width="1dp"
        android:color="#30000000" /> <!-- Gris léger à 20% d'opacité -->
</shape>
