<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongDetailActivity">

    <!-- Image de fond -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_spirituel"
        android:scaleType="centerCrop"
        android:alpha="0.3" />

    <!-- Contenu principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Titre centrÃ© -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥ Titre du Cantique ðŸ”¥"
                android:textColor="#965E3F"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Ligne catÃ©gorie + icÃ´ne sol -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sol"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/categoryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CatÃ©gorie"
                    android:textColor="#965E3F"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />
            </LinearLayout>

            <!-- Paroles -->
            <TextView
                android:id="@+id/lyricsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paroles du cantique..."
                android:textColor="#965E3F"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Auteur -->
            <TextView
                android:id="@+id/authorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auteur inconnu"
                android:textColor="#965E3F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="12dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- IcÃ´nes audio/piano -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="space_between"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/audioUnavailableIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/audio" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pdfUnavailableIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/piano"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ã€ venir"
                        android:textColor="#965E3F"
                        android:textSize="14sp"
                        android:textStyle="italic" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bouton Ã©couter -->
            <Button
                android:id="@+id/playButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ã‰couter le chant"
                android:layout_marginBottom="12dp" />

            <!-- Bouton partition -->
            <Button
                android:id="@+id/sheetButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir la partition" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
