<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongDetailActivity">

    <!-- Image de fond -->
    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_spirituel"
        android:scaleType="centerCrop"
        android:alpha="0.3" />

    <!-- Contenu -->
    <ScrollView
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 🔥 Titre centré -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔥 Titre 🔥"
                android:textColor="#965E3F"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- 🎼 Catégorie avec icône sol -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sol"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/categoryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catégorie"
                    android:textColor="#965E3F"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 👤 Auteur -->
            <TextView
                android:id="@+id/authorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auteur inconnu"
                android:textColor="#965E3F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="8dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- ❌ Si audio et pdf non disponibles -->
            <LinearLayout
                android:id="@+id/unavailableIconsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="space_between"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/audioUnavailableIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/audio" />

                <LinearLayout
                    android:id="@+id/pdfUnavailableLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/piano"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="À venir"
                        android:textColor="#965E3F"
                        android:textStyle="italic"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 📜 Paroles -->
            <TextView
                android:id="@+id/lyricsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paroles du cantique..."
                android:textColor="#965E3F"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- 🎧 Icône audio si dispo -->
            <ImageView
                android:id="@+id/audioAvailableIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/audio"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- ▶️ Écouter -->
            <Button
                android:id="@+id/playButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Écouter le chant"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <!-- 🎼 Icône partition si dispo -->
            <ImageView
                android:id="@+id/pdfAvailableIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/piano"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- 🎵 Voir partition -->
            <Button
                android:id="@+id/sheetButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir la partition"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
