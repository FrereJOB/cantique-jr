<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Contenu principal -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Image de fond -->
        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_spirituel"
            android:scaleType="centerCrop"
            android:alpha="0.3" />

        <!-- Bouton ouvrir menu -->
        <ImageButton
            android:id="@+id/open_drawer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu"
            android:contentDescription="Ouvrir le menu" />

        <!-- Bouton fermer menu -->
        <ImageButton
            android:id="@+id/close_drawer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            android:contentDescription="Fermer le menu"
            android:visibility="gone" />

        <!-- Contenu principal -->
        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:layout_below="@+id/open_drawer">

            <!-- Titre principal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantiques Spirituels"
                android:textColor="#0D47A1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Barre de recherche -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Rechercher titre, auteur, numéro, catégorie"
                    android:inputType="text"
                    android:padding="12dp"
                    android:background="@drawable/search_edittext_bg"
                    android:layout_marginEnd="48dp" />

                <ImageButton
                    android:id="@+id/searchButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="4dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_search"
                    android:contentDescription="Rechercher" />
            </RelativeLayout>

            <!-- Liste des chants -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/songs_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/emptyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aucun cantique trouvé"
                android:textColor="#D32F2F"
                android:textSize="16sp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- MENU LATERAL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/font_lateral"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="16dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp">

            <!-- IMAGE LOUANGE -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/louange"
                android:contentDescription="Louange"
                android:layout_marginBottom="16dp" />

            <!-- LIENS DE MENU -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="À propos du groupe"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="À propos de l’application"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Partager"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp" />
            </LinearLayout>

            <!-- TEXTE BIBLIQUE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Célébrez l'ÉTERNEL avec la harpe ; chantez ses louanges sur le luth à dix cordes ;\n\nChantez-lui un cantique nouveau ; pincez habilement de vos instruments avec un cri de joie.\n\nCar la parole de l'ÉTERNEL est droite, et toute son œuvre est avec vérité.\n\nPsaumes 33:1-5"
                android:textSize="14sp"
                android:textColor="#FFE0B2"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="24dp"
                android:paddingBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:paddingHorizontal="16dp" />

            <!-- IMAGE BIBLE -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bible"
                android:contentDescription="Icône Bible"
                android:layout_marginTop="8dp" />

            <!-- FOOTER -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0\n© 2025 Jésus-Revient Ministère"
                android:textSize="12sp"
                android:textColor="#FFCCBC"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:textAlignment="center" />
        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>
