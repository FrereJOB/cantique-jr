<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_info_groupe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Liens sociaux avec icônes -->
        <LinearLayout
            android:id="@+id/link_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/icon_site"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/site"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/text_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site web" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/link_facebook_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/icon_facebook_page"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/facebook"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/text_facebook_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Page Facebook" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/link_facebook_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/icon_facebook_group"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/facebook"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/text_facebook_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groupe Facebook" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/link_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/icon_whatsapp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/whatsapp"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/text_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chaîne WhatsApp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/link_telegram_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/icon_telegram_channel"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/telegram"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/text_telegram_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canal Telegram" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/link_telegram_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/icon_telegram_group"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/telegram"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/text_telegram_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groupe Telegram" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/link_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/icon_twitter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/twitter"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/text_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twitter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/link_gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/icon_gps"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/gps"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/text_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localisation GPS" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>