<resources>
<!--  Thème principal clair  -->
<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<!--  Couleurs principales  -->
<item name="colorPrimary">#0D47A1</item>
<!--  Bleu profond  -->
<item name="colorPrimaryVariant">#1976D2</item>
<item name="colorOnPrimary">#FFFFFF</item>
<item name="colorSecondary">#FFD700</item>
<!--  Doré  -->
<item name="colorSecondaryVariant">#FFC107</item>
<item name="colorOnSecondary">#000000</item>
<item name="android:statusBarColor">#0D47A1</item>
<item name="android:navigationBarColor">#FFFFFF</item>
<!--  Style de fond  -->
<item name="android:windowBackground">#FFFFFF</item>
</style>
<!--  Style général pour les titres  -->
<style name="TextTitle">
<item name="android:textColor">#0D47A1</item>
<item name="android:textSize">20sp</item>
<item name="android:textStyle">bold</item>
</style>
<!--  Style pour les sous-titres ou noms d'auteurs  -->
<style name="TextSubtitle">
<item name="android:textColor">#444444</item>
<item name="android:textSize">16sp</item>
</style>
<!--  Style des paroles de chant  -->
<style name="TextLyrics">
<item name="android:textColor">#000000</item>
<item name="android:textSize">16sp</item>
<item name="android:lineSpacingExtra">4dp</item>
</style>
<!--  Style pour les boutons  -->
<style name="RoundedButton">
<item name="android:backgroundTint">#0D47A1</item>
<item name="android:textColor">#FFFFFF</item>
<item name="android:padding">10dp</item>
</style>
</resources>
